{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": ["styled-components/cssprop"],
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./src"],
  "exclude": [".cache", "node_modules", "dist", "public", "scripts", "tmp"]
}
